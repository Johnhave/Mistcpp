Enter file contents here#include<iostream>
#include<iomanip>
#include<cmath>
using namespace std;
int main() 
{
    int n,m,p,a;
	cin>>n;
	m=1;
	p=1;
    while(m<=n)
	{
		a=0;
		cout<<setw((n-p)*5)<<"";
		
			while(a<p)
			{

				cout<<setw(5)<<pow(2,a);
				a++;
			}
			a=a-2;
		while(a>=0)
			{
				
				cout<<setw(5)<<pow(2,a);
				a--;
			}
			cout<<endl;			  
	     p++;
	     m++;
		}
	return 0;
}
